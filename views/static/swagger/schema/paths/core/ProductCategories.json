{
    "/productcategories": {
        "get": {
            "tags": [
                "Products"
            ],
            "summary": "Fetch a product category or product categories from WinMan",
            "operationId": "getProductCategories",
            "description": "<p>Fetch product categories which contain web-enabled products from WinMan.</p>",
            "produces": [
                "application/json",
                "application/xml"
            ],
            "parameters": [
                {
                    "in": "query",
                    "name": "guid",
                    "description": "<p>Fetch a single product category with the supplied <em>guid</em>.</p>",
                    "required": false,
                    "type": "string",
                    "minLength": 36,
                    "maxLength": 36
                },
                {
                    "in": "query",
                    "name": "website",
                    "description": "<p>Fetch only product categories which contain web-enabled products attached to the supplied <em>website</em>.</p>",
                    "required": true,
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100
                },                
                {
                    "in": "query",
                    "name": "modified",
                    "description": "<p>Fetch only product categories modified within the specified number of seconds.</p>",
                    "required": false,
                    "type": "integer",
                    "format": "int32",
                    "minimum": 0
                }
            ],
            "responses": {
                "200": {
                    "description": "Query executed successfully.",
                    "schema": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/ProductCategory"
                        },
                        "xml": {
                            "name": "ProductCategories",
                            "wrapped": true
                        }
                    }
                },
                "400": {
                    "description": "Bad input parameter.",
                    "schema": {
                        "$ref": "#/definitions/ErrorResponse"
                    }
                },
                "401": {
                    "description": "Unauthorised. Access token may be invalid, expired or not supplied in the request."
                }                
            }
        }
    }
}